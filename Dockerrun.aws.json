{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "nlp",
      "host": {
        "sourcePath": "/var/app/current/nlp"
      }
    },
    {
      "name": "connector-slack",
      "host": {
        "sourcePath": "/var/app/current/connector/slack/"
      }
    },
    {
      "name": "connector-discord",
      "host": {
        "sourcePath": "/var/app/current/connector/discord/"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "nlp",
      "hostname": "nlp",
      "image": "victorbalssa/nlp-container:v1.0.0",
      "environment": [
        {
          "name": "Container",
          "value": "nlp"
        }
      ],
      "essential": true,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": "nlp",
          "containerPath": "/bot",
          "readOnly": false
        }
      ],
      "links": [
        "mongo"
      ],
      "portMappings": [
        {
          "hostPort": 5051,
          "containerPort": 5000
        }
      ],
      "command": ["/usr/bin/python2.7", "/bot/api.py"]
    },
    {
      "name": "mongo",
      "hostname": "mongo",
      "image": "mongo",
      "environment": [
        {
          "name": "Container",
          "value": "mongo"
        }
      ],
      "essential": true,
      "memory": 128
    },
    {
      "name": "connector-slack",
      "image": "victorbalssa/python-container:v1.0.1",
      "environment": [
        {
          "name": "Container",
          "value": "slack-co"
        },
        {
          "name": "SLACK_BOT_TOKEN",
          "value": "${SLACK_BOT_TOKEN}"
        },
        {
          "name": "SLACK_BOT_ID",
          "value": "${SLACK_BOT_ID}"
        }
      ],
      "essential": false,
      "memory": 64,
      "mountPoints": [
        {
          "sourceVolume": "connector-slack",
          "containerPath": "/bot",
          "readOnly": false
        }
      ],
      "links": [
        "nlp"
      ],
      "command": ["python", "./slack_bot_connector.py"]
    },
    {
      "name": "connector-discord",
      "image": "victorbalssa/python-container:v1.0.1",
      "essential": false,
      "memory": 64,
      "environment": [
        {
          "name": "Container",
          "value": "discord-co"
        },
        {
          "name": "DISCORD_TOKEN",
          "value": "${DISCORD_TOKEN}"
        }
      ],
      "links": [
        "nlp"
      ],
      "mountPoints": [
        {
          "sourceVolume": "connector-discord",
          "containerPath": "/bot",
          "readOnly": false
        }
      ],
      "command": ["python", "./discord_bot_connector.py"]
    }
  ]
}
