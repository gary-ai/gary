{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "nlp",
      "host": {
        "sourcePath": "/var/app/current/nlp"
      }
    },
    {
      "name": "connector-slack",
      "host": {
        "sourcePath": "/var/app/current/connector/slack/"
      }
    },
    {
      "name": "connector-discord",
      "host": {
        "sourcePath": "/var/app/current/connector/discord/"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "nlp",
      "image": "victorbalssa/tflearn-nltk:latest",
      "environment": [
        {
          "name": "Container",
          "value": "PHP"
        }
      ],
      "essential": true,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": "nlp",
          "containerPath": "/bot",
          "readOnly": false
        }
      ],
      "command": ["/usr/bin/python2.7 fixture.py && /usr/bin/python2.7 training.py && /usr/bin/python2.7 api.py"]
    },
    {
      "name": "connector-slack",
      "image": "python:3.5",
      "environment": [
        {
          "name": "Container",
          "value": "PHP"
        }
      ],
      "essential": true,
      "memory": 64,
      "mountPoints": [
        {
          "sourceVolume": "connector-slack",
          "containerPath": "/bot",
          "readOnly": false
        }
      ]
    },
    {
      "name": "connector-discord",
      "image": "python:3.5",
      "essential": true,
      "memory": 64,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        },
        {
          "hostPort": 443,
          "containerPort": 443
        }
      ],
      "links": [
        "adbackco-app"
      ],
      "mountPoints": [
        {
          "sourceVolume": "adbackco-app",
          "containerPath": "/var/www/html",
          "readOnly": true
        },
        {
          "sourceVolume": "nginx-proxy-conf-d",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        },
        {
          "sourceVolume": "nginx-proxy-conf",
          "containerPath": "/etc/nginx/nginx.conf",
          "readOnly": true
        },
        {
          "sourceVolume": "nginx-fastcgi-params",
          "containerPath": "/etc/nginx/fastcgi_params",
          "readOnly": true
        },
        {
          "sourceVolume": "awseb-logs-nginx",
          "containerPath": "/var/log/nginx"
        }
      ]
    }
  ]
}