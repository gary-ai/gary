{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "nlp",
      "host": {
        "sourcePath": "/var/app/current/nlp"
      }
    },
    {
      "name": "connector-slack",
      "host": {
        "sourcePath": "/var/app/current/connector/slack/"
      }
    },
    {
      "name": "connector-discord",
      "host": {
        "sourcePath": "/var/app/current/connector/discord/"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "training",
      "hostname": "training",
      "image": "victorbalssa/nlp-container:v1.0.0",
      "environment": [
        {
          "name": "Container",
          "value": "training"
        },
        {
          "name": "IS_DEV",
          "value": "${IS_DEV}"
        },
        {
          "name": "MONGO_HOST",
          "value": "${MONGO_HOST}"
        },
        {
          "name": "MONGO_PORT",
          "value": "${MONGO_PORT}"
        },
        {
          "name": "MONGO_DBNAME",
          "value": "${MONGO_DBNAME}"
        }
      ],
      "essential": true,
      "memory": 256,
      "mountPoints": [
        {
          "sourceVolume": "nlp",
          "containerPath": "/bot",
          "readOnly": false
        }
      ],
      "links": [
        "mongo:mongo"
      ]
    },
    {
      "name": "nlp",
      "hostname": "nlp",
      "image": "victorbalssa/nlp-container:v1.0.0",
      "environment": [
        {
          "name": "Container",
          "value": "nlp"
        },
        {
          "name": "IS_DEV",
          "value": "${IS_DEV}"
        },
        {
          "name": "MONGO_HOST",
          "value": "${MONGO_HOST}"
        },
        {
          "name": "MONGO_PORT",
          "value": "${MONGO_PORT}"
        },
        {
          "name": "MONGO_DBNAME",
          "value": "${MONGO_DBNAME}"
        }
      ],
      "essential": true,
      "memory": 256,
      "mountPoints": [
        {
          "sourceVolume": "nlp",
          "containerPath": "/bot",
          "readOnly": false
        }
      ],
      "links": [
        "mongo:mongo"
      ],
      "command": [
        "bash",
        "-c",
        "/usr/bin/python2.7 /bot/fixture.py && /usr/bin/python2.7 /bot/training.py && /usr/bin/python2.7 /bot/api.py"
      ]
    },
    {
      "name": "connector-slack",
      "image": "victorbalssa/python-container:v1.0.1",
      "environment": [
        {
          "name": "Container",
          "value": "slack-co"
        },
        {
          "name": "SLACK_BOT_TOKEN",
          "value": "${SLACK_BOT_TOKEN}"
        },
        {
          "name": "SLACK_BOT_ID",
          "value": "${SLACK_BOT_ID}"
        }
      ],
      "essential": false,
      "memory": 64,
      "mountPoints": [
        {
          "sourceVolume": "connector-slack",
          "containerPath": "/bot",
          "readOnly": false
        }
      ],
      "links": [
        "nlp:nlp"
      ],
      "command": [
        "python",
        "./slack_bot_connector.py"
      ]
    },
    {
      "name": "connector-discord",
      "image": "victorbalssa/python-container:v1.0.1",
      "essential": false,
      "memory": 64,
      "environment": [
        {
          "name": "Container",
          "value": "discord-co"
        },
        {
          "name": "DISCORD_TOKEN",
          "value": "${DISCORD_TOKEN}"
        }
      ],
      "links": [
        "nlp:nlp"
      ],
      "mountPoints": [
        {
          "sourceVolume": "connector-discord",
          "containerPath": "/bot",
          "readOnly": false
        }
      ],
      "command": [
        "python",
        "./discord_bot_connector.py"
      ]
    }
  ]
}
