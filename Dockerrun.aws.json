{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "nlp",
      "host": {
        "sourcePath": "/var/app/current/nlp"
      }
    },
    {
      "name": "connector-slack",
      "host": {
        "sourcePath": "/var/app/current/connector/slack/"
      }
    },
    {
      "name": "connector-discord",
      "host": {
        "sourcePath": "/var/app/current/connector/discord/"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "nlp",
      "hostname": "nlp",
      "image": "victorbalssa/nlp-container",
      "environment": [
        {
          "name": "Container",
          "value": "nlp"
        }
      ],
      "essential": true,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": "nlp",
          "containerPath": "/bot",
          "readOnly": false
        }
      ],
      "links": [
        "mongo"
      ],
      "portMappings": [
        {
          "hostPort": 5051,
          "containerPort": 5000
        }
      ],
      "command": ["/usr/bin/python2.7 fixture.py && /usr/bin/python2.7 training.py && /usr/bin/python2.7 api.py"]
    },
    {
      "name": "mongo",
      "hostname": "mongo",
      "image": "mongo",
      "environment": [
        {
          "name": "Container",
          "value": "mongo"
        }
      ],
      "essential": true,
      "memory": 128
    },
    {
      "name": "connector-slack",
      "image": "victorbalssa/python-container",
      "environment": [
        {
          "name": "Container",
          "value": "slack-co"
        }
      ],
      "essential": true,
      "memory": 64,
      "mountPoints": [
        {
          "sourceVolume": "connector-slack",
          "containerPath": "/bot",
          "readOnly": false
        }
      ],
      "links": [
        "nlp"
      ],
      "command": ["python ./slack_bot_connector.py"]
    },
    {
      "name": "connector-discord",
      "image": "victorbalssa/python-container",
      "essential": true,
      "memory": 64,
      "command": ["python ./discord_bot_connector.py"],
      "links": [
        "nlp"
      ],
      "mountPoints": [
        {
          "sourceVolume": "connector-discord",
          "containerPath": "/bot",
          "readOnly": false
        }
      ]
    }
  ]
}
